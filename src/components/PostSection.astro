---
import type { PostModel } from "../api/post";

type Props = {
  posts: PostModel[];
};

const { posts } = Astro.props;
---

<section class="space-y-4 container mx-auto p-6 md:p-14 text-gray-300">
  <h2 class="text-3xl font-bold">Ultimos Posts ({posts.length})</h2>
  <ul class="space-y-2 list-decimal list-inside">
    {
      posts.map((post) => (
        <li class="transition-colors duration-500 hover:text-orange-600 w-max">
          <a href={`/post/${post.id}`}>{post.title}</a>
        </li>
      ))
    }
  </ul>
</section>
