---
import type { HeaderSectionBlok } from "../types/storyblok/test-space";

type Props = {
  blok: HeaderSectionBlok;
};

const { blok } = Astro.props;
---

<a href="/" class="flex items-center gap-3">
  <figure
    class="grid size-10 place-items-center rounded-xl border border-white/10 bg-white/5 text-white shadow-[0_0_0_1px_rgba(255,255,255,0.04)_inset] [&_svg]:size-5"
  >
    <Fragment set:html={blok.svg} />
  </figure>
  <div class="leading-tight">
    <span class="text-sm font-semibold text-white">{blok.title}</span>
  </div>
</a>
