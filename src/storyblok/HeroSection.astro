---
import StoryblokComponent from "@storyblok/astro/StoryblokComponent.astro";
import type { SbBlokData } from "@storyblok/astro";
import type { HeroSectionBlok } from "../types/storyblok/test-space";

type Props = {
  blok: HeroSectionBlok;
};

const { blok } = Astro.props;
const fromColor = blok.from_color?.color;
const toColor = blok.to_color?.color;
const action = blok.action ?? [];
---

<section
  class="relative overflow-hidden rounded-2xl border border-white/10 bg-white/5 shadow-[0_0_0_1px_rgba(255,255,255,0.04)_inset]"
>
  <div
    class="absolute inset-0 opacity-25"
    style={`background: radial-gradient(900px circle at 20% 10%, ${fromColor}, transparent 55%), radial-gradient(900px circle at 80% 60%, ${toColor}, transparent 55%)`}
  >
  </div>
  <div class="relative px-6 py-12 sm:px-10 sm:py-16">
    <div class="mx-auto flex max-w-3xl flex-col items-start gap-6">
      <h2 class="text-3xl font-semibold tracking-tight text-white sm:text-5xl">
        {blok.title}
      </h2>
      <div class="flex flex-wrap gap-3">
        {
          action
            .filter(Boolean)
            .map((component) => (
              <StoryblokComponent blok={component as SbBlokData} />
            ))
        }
      </div>
    </div>
  </div>
</section>
