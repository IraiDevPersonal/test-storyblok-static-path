---
import type { ActionHeroSectionBlok } from "../types/storyblok/test-space";

type Props = {
  blok: ActionHeroSectionBlok;
};

const { blok } = Astro.props;
---

<a
  href={`/${blok.href?.cached_url}`}
  class="inline-flex items-center justify-center rounded-full border border-white/15 bg-white/5 px-4 py-2 text-sm font-semibold text-white shadow-[0_0_0_1px_rgba(255,255,255,0.04)_inset] transition hover:bg-white/10 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-white/30 focus-visible:ring-offset-2 focus-visible:ring-offset-black"
>
  {blok.label}
</a>
